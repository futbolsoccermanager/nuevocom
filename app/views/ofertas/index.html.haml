%h2= t('ofertas.enviadas')
%table.table
  %thead
    %tr
      %th= t('ofertas.jugador')
      %th= t('ofertas.fecha')
      %th= t('ofertas.valor')
      %th
  %tbody
    - @ofertas.each do |oferta|
      - clase = clase_oferta(oferta.estado)
      %tr{:class => clase}
        %td
          = link_to oferta.mercado.jugador.nombre, estadistica_jugador_path(oferta.mercado.jugador.id), :remote => true
        %td= oferta.fecha
        %td= oferta.valor
        %td
          = link_to oferta_path(oferta), :remote => true do
            %span.icon-info-sign
          - if oferta.estado == Oferta::PENDIENTE
            %span.icon-remove
%h2= t('ofertas.recibidas')
