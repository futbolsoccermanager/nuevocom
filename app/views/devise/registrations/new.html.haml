%h2= t('login.signup_tit')
= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
  = devise_error_messages!
  %div
    = f.label :email, t('login.email')
    = f.email_field :email
  %div
    = f.label :username, t('login.username')
    = f.text_field :username
  %div
    = f.label :password, t('login.password')
    = f.password_field :password
  %div
    = f.label :password_confirmation, t('login.password_confirmation')
    = f.password_field :password_confirmation
  %div= f.submit t('login.signup'), :class => 'btn btn-primary'
= render "devise/shared/links"