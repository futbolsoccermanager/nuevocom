%div.position-field.banco-portero
  - @porteros.each do |jugador|
    %div.jugador-alineacion.port.anadir{:id => jugador.id}
      %div{:style => escudo_equipo(jugador.equipo.nombre)}
        %p.dorsal= jugador.dorsal
      %p.name= jugador.nombre

  .clear

